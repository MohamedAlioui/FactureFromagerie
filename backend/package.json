{
  "name": "fromagerie-invoice-backend",
  "version": "1.0.0",
  "description": "Backend API for Fromagerie Invoice App",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build completed successfully'",
    "build:full": "cd ../frontend && npm run build && cp -r dist ../backend/",
    "build:full:windows": "cd ../frontend && npm run build && xcopy /E /I dist ..\\backend\\dist",
    "vercel-build": "npm run build:full:windows"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": "18.x"
  }
}
